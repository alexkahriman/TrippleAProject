<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/small_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/newsFeedCardView"
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_card_view_height"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_news"
                android:tint="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginStart="@dimen/small_margin"
                android:text="News Feed"
                android:textSize="20sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/eventsCardView"
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_card_view_height"
        android:layout_marginTop="@dimen/small_margin"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/small_padding">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_calendar"
                android:tint="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginStart="@dimen/small_margin"
                android:text="Events"
                android:textSize="20sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/appModeCardView"
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_card_view_height"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/openFavTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/small_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_toStartOf="@id/checkBox"
                android:text="On launch open events tab"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/red"
                android:foregroundTint="@color/colorPrimary" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/logoutCardView"
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_card_view_height"
        android:layout_marginTop="@dimen/small_margin"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/large_padding"
            android:text="Logout"
            android:textColor="@color/red" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/aboutCardView"
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_card_view_height"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/large_padding"
            android:text="About" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/tosCardView"
        style="@style/DefaultCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_card_view_height"
        android:layout_marginTop="@dimen/small_margin"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/large_padding"
            android:text="Terms of Service" />

    </android.support.v7.widget.CardView>

</LinearLayout>